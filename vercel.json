{
  "buildCommand": "bun run build",
  "installCommand": "bun install",
  "framework": null,
  "functions": {
    "api/index.mjs": {
      "includeFiles": "build/**"
    }
  },
  "rewrites": [
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/(.*)", "destination": "/api/index.mjs" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
